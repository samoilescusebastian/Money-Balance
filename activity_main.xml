<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    tools:context="ss.test.MainActivity">

    <LinearLayout
        android:background="@drawable/border_stylayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="8dp"
        android:layout_weight=".66"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textViewProfit"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:text="Profit"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textShowProfit"
            android:layout_width="121dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.07"
            android:background="@drawable/border_style"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:textSize="40dp" />


    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="8dp">

</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:background="@drawable/border_stylayout"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="12dp"
        android:layout_weight=".5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewCastig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="0.07"
            android:text="Castig"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/textShowCastig"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textViewCastig"
            android:layout_alignBottom="@id/textViewCastig"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="64dp"
            android:layout_weight="0.07"
            android:background="@drawable/border_style"
            android:text="0"
            android:textColor="#00C853"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/textEditCastig"
            android:layout_width="168dp"
            android:layout_height="52dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_style"
            android:layout_alignStart="@id/textShowCastig"
            android:layout_below="@id/textShowCastig"
            android:inputType="number"
            android:textSize="40dp"
            android:textAlignment="center"
            android:text="0"
            android:textColor="#00C853"
            />
        <Button
            android:id="@+id/addCastig"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textViewCastig"
            android:layout_below="@id/textShowCastig"
            android:layout_marginTop="4dp"
            android:text="Add"
            android:textSize="32dp"
            android:textAlignment="center"

            />



    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="8dp">

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".5"
        android:background="@drawable/border_stylayout"
        android:orientation="horizontal"

        android:paddingLeft="8dp"
        android:paddingRight="8dp">


        <TextView
            android:id="@+id/textViewPierderi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_weight="0.07"
            android:text="Pierderi"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:textSize="45dp" />

        <TextView
            android:id="@+id/textShowPierderi"
            android:layout_width="168dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/textViewPierderi"
            android:layout_alignBottom="@id/textViewPierderi"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="64dp"
            android:layout_weight="0.07"
            android:background="@drawable/border_style"
            android:text="0"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.PopupMenu.Large"
            android:textColor="#DD2C00"
            android:textSize="40dp" />

        <EditText
            android:id="@+id/textEditPierderi"
            android:layout_width="168dp"
            android:layout_height="52dp"
            android:layout_alignStart="@id/textShowPierderi"
            android:layout_below="@id/textShowPierderi"
            android:layout_marginTop="8dp"
            android:background="@drawable/border_style"
            android:inputType="number"
            android:text="0"
            android:textAlignment="center"
            android:textColor="#DD2C00"
            android:textSize="40dp" />

        <Button
            android:id="@+id/addPierderi"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/textViewPierderi"
            android:layout_below="@id/textShowPierderi"
            android:layout_marginTop="4dp"
            android:text="Add"
            android:textAlignment="center"
            android:textSize="32dp"

            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".66"
        android:orientation="horizontal">


        <Button
            android:id="@+id/resetButton"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:textSize="32dp"
            android:layout_gravity="center"
            android:background="#3F51B5"
            android:text="Reset"
            android:textColor="#FAFAFA"/>
    </LinearLayout>

</LinearLayout>
